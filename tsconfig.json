{
    "compilerOptions": {
      "target": "ES2018",                          
      "module": "commonjs",                    
      "lib": ["ES2018"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "./src",
      "baseUrl": ".",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "incremental": true,
      "isolatedModules": true
    },
    
    "include": ["src/**/*.ts"],
  }